<section class="content-block team-1 team-1-2">
  <div class="container">
    <div class="underlined-title">
      <h1><%= "Pilot Index" %></h1>
      <hr>
    </div>

    <div class="row">
      <% @pilots.each do |pilot| %>
        <div class="col-md-3 col-sm-6 team-member-wrap">
          <div class="media">
            <div class="media-left media middle">
              <%= link_to image_tag("#{pilot.avatar_url}", size: "60"), pilot_path(pilot) %>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= pilot.rank %> <%= pilot.name %></h4>
              <ul class="list-group">
                <li class="list-group-item"> <%= pilot.qualification %>, <%= pilot.hours %> Hours</li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- /.row -->
  </div>
</section>
