<h1>Locations Index</h1>

<% @locations.each do |location| %>
  <div class="media">
    <div class="media-left media middle">
      <a href="#">
        <%= image_tag("emblems/52d_Fighter_Wing.png", size: "100") %>
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= location.base %></h4>
      <ul class="list-group">
        <li class="list-group-item"> <%= location.unit %> </li>
        <li class="list-group-item"> <%= location.country %> </li>
        <% if location.state? %>
          <li class="list-group-item"> <%= location.state %> </li>
        <% end %>
        <li class="list-group-item"> <%= location.billets %> Billets </li>
      </ul>
    </div>
  </div>
<% end %>
