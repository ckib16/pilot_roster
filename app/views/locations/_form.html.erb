<%= form_for @location do |f| %>
  <%= f.label :base, class: "control-label" %>
  <%= f.text_field :base, class: "form-control" %>

  <%= f.label :unit, class: "control-label" %>
  <%= f.text_field :unit, class: "form-control" %>

  <%= f.label :country, class: "control-label" %>
  <%= f.text_field :country, class: "form-control" %>

  <%= f.label :state, class: "control-label" %>
  <%= f.text_field :state, class: "form-control" %>

  <%= f.label :oconus, class: "control-label" %>
  <%= f.check_box :oconus %>

  <%= f.label :pascode, class: "control-label" %>
  <%= f.text_field :pascode, class: "form-control" %>

  <%= f.label :billets, class: "control-label" %>
  <%= f.text_field :billets, class: "form-control" %>

  <%= f.submit "Save / Update", class: "btn btn-primary" %>
<% end %>
