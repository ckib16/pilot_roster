<% @location.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<div class="row">
  <div class="col-md-4">
    <%= form_for @location do |f| %>
      <div class="form-group">
        <%= f.label :base, class: "control-label" %>
        <%= f.text_field :base, autofocus: true, class: 'form-control', placeholder: "Enter air base name - Ex: 'Kunan AB'" %>
      </div>

      <div class="form-group">
        <%= f.label :unit, class: "control-label" %>
        <%= f.text_field :unit, class: "form-control", placeholder: "Enter Wing name - Ex: '8th Fighter Wing'" %>
      </div>

      <div class="form-group">
        <%= f.label :country, class: "control-label" %>
        <%= f.text_field :country, class: "form-control", placeholder: "Enter country name- Ex: 'South Korea'" %>
      </div>

      <div class="form-group">
        <%= f.label :state, class: "control-label" %>
        <%= f.text_field :state, class: "form-control", placeholder: "Enter state name if in USA, else leave blank" %>
      </div>

      <div class="form-group">
        <%= f.label "Is this location OCONUS?", class: "control-label" %>
        <%= f.check_box :oconus %>
      </div>

      <div class="form-group">
        <%= f.label "PASCODE", class: "control-label" %>
        <%= f.text_field :pascode, class: "form-control", placeholder: "Location's PASCODE - Ex: WP169669" %>
      </div>

      <div class="form-group">
        <%= f.label :billets, class: "control-label" %>
        <%= f.text_field :billets, class: "form-control", placeholder: "Total number of API-1 + API-6 Billets" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save / Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
