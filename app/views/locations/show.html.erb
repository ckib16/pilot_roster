<section class="content-block team-1 team-1-2">
  <div class="container">
    <div class="underlined-title">
      <h1><%= @location.base %></h1>
      <hr>
    </div>

    <div class="col-md-3 col-sm-6 team-member-wrap">
      <div class="team-member">
        <%= image_tag("emblems/#{@location.emblem_url}") %>
        <div class="team-details">
          <h4 class="member-name"><%= @location.unit %></h4>
          <% if @location.state? %>
            <p class="position"><%= @location.state %></p>
          <%else %>
            <p class="position"><%= @location.country %> </p>
          <% end %>
          <p class="position"><%= @location.billets %> Billets</p>
          <!-- End of Location -->
        </div>
      </div>
      <div class="col-md-3 col-sm-6 team-member-wrap">
        <%= link_to "Edit Location", edit_location_path(@location), class: "btn btn-warning" %>
      </div>
    </div>

    <div class="row">
      <% @pilots.each do |pilot| %>
        <div class="col-md-3 col-sm-6 team-member-wrap">
          <div class="media">
            <div class="media-left media middle">
              <%= link_to image_tag("#{pilot.avatar_url}", size: "60"), pilot_path(pilot) %>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= pilot.rank %> <%= pilot.name %></h4>
              <ul class="list-group">
                <li class="list-group-item"> <%= pilot.qualification %>, <%= pilot.hours %> Hours</li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div class="col-md-3 col-sm-6 team-member-wrap">
        <%= link_to "Add Pilot to this location", new_location_pilot_path(@location), class: "btn btn-primary" %>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>
